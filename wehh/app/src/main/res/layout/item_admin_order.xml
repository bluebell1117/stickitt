<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/bg_cart_item"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_order_id_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order #123"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_order_user_id_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="User ID: 45" />

    <TextView
        android:id="@+id/tv_order_total_price_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Total: Rp 50.000" />

    <TextView
        android:id="@+id/tv_order_status_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Status: pending" />

    <TextView
        android:id="@+id/tv_order_date_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Date: 2024-05-21" />

    <Button
        android:id="@+id/btn_view_order_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="View Details" />

</LinearLayout>